{
  "version": "0.2.0",
  "configurations": [
    {
      "type": "pwa-node",
      "request": "launch",
      "name": "Next.js dev",
      "runtimeExecutable": "npm",
      "runtimeArgs": ["run", "dev"],
      "cwd": "${workspaceFolder}",
      "env": {
        "NODE_OPTIONS": "--max-old-space-size=4096",
        "NEXT_PUBLIC_TURNSTILE_SITE_KEY": "${env:NEXT_PUBLIC_TURNSTILE_SITE_KEY}", // For Turnstile CAPTCHA
        "NEXT_PUBLIC_TENANT_SLUG": "default-tenant" // Default tenant for debugging
      },
      "console": "integratedTerminal",
      "skipFiles": ["<node_internals>/**"],
      "sourceMaps": true,
      "preLaunchTask": "eslint" // Run ESLint before launch
    },
    {
      "type": "pwa-node",
      "request": "launch",
      "name": "Wrangler dev (Workers)",
      "runtimeExecutable": "npx",
      "runtimeArgs": ["wrangler", "dev", "--env", "dev"],
      "cwd": "${workspaceFolder}",
      "env": {
        "CF_D1_BINDING": "dev-d1-database", // Example D1 binding for dev
        "CF_KV_BINDING": "dev-kv-namespace", // Example KV binding
        "HCP_API_KEY": "${env:HCP_API_KEY}", // Housecall Pro API key
        "DIALPAD_API_KEY": "${env:DIALPAD_API_KEY}" // Dialpad API key
      },
      "console": "integratedTerminal",
      "skipFiles": ["<node_internals>/**"],
      "sourceMaps": true
    },
    {
      "type": "node",
      "request": "launch",
      "name": "Playwright e2e tests",
      "program": "${workspaceFolder}/node_modules/.bin/playwright",
      "args": ["test", "--project=chromium"],
      "cwd": "${workspaceFolder}",
      "console": "integratedTerminal",
      "env": {
        "PLAYWRIGHT_TEST_BASE_URL": "http://localhost:3000"
      },
      "skipFiles": ["<node_internals>/**"]
    },
    {
      "type": "pwa-node",
      "request": "launch",
      "name": "Vitest unit tests",
      "runtimeExecutable": "npm",
      "runtimeArgs": ["run", "test:unit"],
      "cwd": "${workspaceFolder}",
      "console": "integratedTerminal",
      "skipFiles": ["<node_internals>/**"]
    }
  ],
  "compounds": [
    {
      "name": "ðŸŸ¢ Full stack: Next + Wrangler",
      "configurations": ["Next.js dev", "Wrangler dev"],
      "stopAll": true
    }
  ]
}