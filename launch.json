{
  "version": "0.2.0",
  "configurations": [
    {
      "type": "pwa-node",
      "request": "launch",
      "name": "Next.js dev",
      "runtimeExecutable": "npm",
      "runtimeArgs": ["run", "dev"],
      "cwd": "${workspaceFolder}",
      "env": {
        "NODE_OPTIONS": "--max-old-space-size=4096"
      },
      "console": "integratedTerminal",
      "skipFiles": ["<node_internals>/**"]
    },
    {
      "type": "pwa-node",
      "request": "launch",
      "name": "Wrangler dev (Workers)",
      "runtimeExecutable": "npx",
      "runtimeArgs": ["wrangler", "dev"],
      "cwd": "${workspaceFolder}",
      "console": "integratedTerminal"
    }
  ],
  "compounds": [
    {
      "name": "ðŸŸ¢ Full stack: Next + Wrangler",
      "configurations": ["Next.js dev", "Wrangler dev"],
      "stopAll": true
    }
  ]
}