{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "lib": ["ESNext", "DOM"],
    "noEmit": true,
    "strict": true,
    "isolatedModules": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "bundler",
    "types": ["@cloudflare/workers-types", "node", "vitest/globals"], // Updated for Vitest globals
    "resolveJsonModule": true,
    "jsx": "preserve",
    "jsxImportSource": "react",
    "allowImportingTsExtensions": true,
    "allowJs": true,
    "incremental": true,
    "plugins": [{ "name": "next" }]
  },
  "include": [
    "src/**/*.ts",
    "worker-configuration.d.ts",
    ".next/types/**/*.ts"
  ],
  "exclude": ["node_modules", "dist"]
}